{
  "private": "true",
  "dependencies": {
    "async": "^2.2.0",
    "ava": "^0.18.1",
    "eslint": "^3.19.0",
    "glob": "^7.1.1",
    "i18n-patch": "1.4.0",
    "js-yaml": "^3.6.1",
    "mkdirp": "^0.5.1",
    "semver": "^5.3.0",
    "shelljs": "^0.7.0"
  },
  "scripts": {
    "translate": "node lib/cli.js translate",
    "check": "node lib/cli.js check",
    "update": "node lib/cli.js update",
    "test": "eslint lib && ava"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": [
        "off"
      ]
    }
  }
}
